{
  "name": "solar-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for Solar E-commerce App",
  "main": "server.js",
 "scripts": {
  "clean": "rimraf dist",
  "build": "npm run clean && tsc",
  "start": "node dist/server.js",

  "dev": "concurrently -k -n TSC,NODE \"npm:tsc:watch\" \"npm:serve\"",
  "predev": "npm run build",
  "tsc:watch": "tsc -w --preserveWatchOutput",
  "serve": "nodemon --exec \"node -r dotenv/config dist/server.js\""
},
  "dependencies": {
    "@bull-board/api": "^6.13.0",
    "@bull-board/express": "^6.13.0",
    "@sentry/node": "^9.40.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/joi": "^17.2.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.59.0",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.11.2",
    "fs": "^0.0.1-security",
    "helmet": "^6.2.0",
    "ioredis": "^5.8.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "path": "^0.12.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.6.1",
    "@types/nodemailer": "^6.4.17",
    "@types/stripe": "^8.0.416",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
